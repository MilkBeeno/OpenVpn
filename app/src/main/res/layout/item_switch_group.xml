<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="67dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivGroupImage"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="14dp"
            app:shapeAppearanceOverlay="@style/roundCornerStyle_4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/white_85"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivGroupExpand"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginEnd="21dp"
            android:padding="5dp"
            android:src="@drawable/switch_node_expand" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivGroupSelect"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginEnd="14dp"
            android:padding="5dp"
            android:src="@drawable/selector_select" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="@color/FFD9D9D9"
        android:visibility="gone"
        tools:visibility="visible" />
</FrameLayout>